/*******************************
 ** 3. Behavior specification **
 *******************************/

  //  behavior_annex ::=
  //    [ variables { behavior_variable }+ ]
  //    [ states { behavior_state }+ ]
  //    [ transitions { behavior_transition }+ ]

  interface Behavior_Annex : Behavior_Entity {
    List_Id  Variables;
    List_Id  States;
    List_Id  Transitions;
  };

  //  behavior_variable ::=
