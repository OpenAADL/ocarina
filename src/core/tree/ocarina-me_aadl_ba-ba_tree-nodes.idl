  };


  //  execute_condition ::= [ logical_value_expression |  behavior_action_block_timeout_catch | otherwise ]
  //  behavior_action_block_timeout_catch : la syntaxe n'est pas claire
  
    interface Execute_Condition : Behavior_Entity {
