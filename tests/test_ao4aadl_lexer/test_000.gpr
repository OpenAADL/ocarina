with "ocarina";

project Test_000 is

   Obj_Dir := External ("OBJ_DIR", ".");

   package Compiler is
      for Default_Switches ("Ada") use
             ("-fPIC", 
              "-g",
              "-gnatfy",
              "-gnatwae",
              "-gnatoa",
              "-fstack-check",
              "-gnaty",
	      "-gnatyu", -- not in -gnaty: check multiple blank lines
	      "-gnatys", -- not in -gnatx: check useless parentheses
	      -- "-fprofile-arcs", 
              -- "-ftest-coverage",
	      "-gnat05");
   end Compiler;

    package Binder is
       for Default_Switches ("Ada") use ("-E", "-t");
   end Binder;

   package Linker is
      for Default_Switches ("Ada") use ("-g");
   end Linker;

   package Builder is
      for Default_Switches ("Ada") use ("-s", "-g");
   end Builder;

   for Source_Dirs use (".");
   for Object_Dir use Obj_Dir;
   for Main use ("test_000");
end Test_000;
