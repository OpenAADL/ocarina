   process Event_Port [
   Input: LNT_Channel_Port, 
   Output: LNT_Channel_Port, 
   Notify: LNT_Channel_Event](
   Queue_Size: Nat) 
   is 
      var 
         Data : LNT_Type_Data,
         FIFO : LNT_Type_Data_FIFO,
         Is_New : bool
      in 
         FIFO := {};
         Data := EMPTY;
         Is_New := false; 
         loop 
            select 
               Input (?Data); 
               Is_New := true;
               if length (FIFO) >= Queue_Size then
                  FIFO := tail (FIFO)
               end if;
               FIFO := append (Data, FIFO)
               []
               if (FIFO != {}) then 
                  Output (Head (FIFO));
                  FIFO := tail (FIFO)
               else
                  Output (EMPTY)
               end if
               []
               if (Is_New) then 
                  Notify (Incoming_Event); 
                  Is_New := false
               else 
                  Notify (No_Event)
               end if
            end select 
         end loop
      end var
   end process

