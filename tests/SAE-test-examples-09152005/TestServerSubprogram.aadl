system s end s;
system implementation S.I end S.I;

package TestServerSubprogram
  public
    -- Good
    thread T
      features
        Sub: server subprogram ;
        
      properties
        Period => 1 ms;
        Compute_Entrypoint => "a";
    end T;

    -- Good
    thread T2
      properties
        Period => 1 ms;
        Compute_Entrypoint => "a";
    end T2;
    
    -- Good (no server subprogram)
    thread implementation T2.I
    end T2.I;
    
    -- Bad: periodic!
    thread implementation T.I1
    end T.I1;
    
    -- Good: aperiodic
    thread implementation T.I2
      properties
        Dispatch_Protocol => aperiodic;
    end T.I2;
    
    -- Good: sporadic
    thread implementation T.I3
      properties
        Dispatch_Protocol => sporadic;
    end T.I3;

    process P
    end P;
    
    process implementation P.I
      subcomponents
        -- bad: periodic
        Th1: thread T ;
        -- good
        Th2: thread T {
        	Dispatch_Protocol => aperiodic;
        };
        -- good
        Th3: thread T {
        	Dispatch_Protocol => sporadic;
        };
        -- bad
        Th6: thread T.I1;
        -- good
        Th4: thread T.I2;
        -- good
        Th5: thread T.I3;
    end P.I;    
end TestServerSubprogram;


