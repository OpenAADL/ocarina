    end S;
  
    system T
      properties
        -- bad
        PS::prop1 => 1;
        -- bad
        PS::prop2 => 2;
        -- good
        PS::prop3 => 3;
    end T;
  
    system implementation S.I
      properties
        -- bad
        PS::prop1 => 1;
        -- bad
        PS::prop2 => 2;      
        -- good
        PS::prop3 => 3;
    end S.I;
end pack2;

